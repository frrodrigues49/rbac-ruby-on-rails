<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table table-bordered text-center">
  <thead>
    <tr>
      <th>Name</th>     
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>       
        <td><%= link_to 'Visualizar', role, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_role_path(role), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Deletar', role, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to 'Novo', new_role_path, :class => "btn btn-primary" %>

