<p id="notice"><%= notice %></p>

<h1>Permissions</h1>

<table class="table table-bordered text-center">
  <thead>
    <tr>
      <th>Name</th>     
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.name %></td>       
        <td><%= link_to 'Visualizar', permission, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_permission_path(permission), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Deletar', permission, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to 'Novo', new_permission_path, :class => "btn btn-primary" %>

