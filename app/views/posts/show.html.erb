<div class="card" style="margin-top: 30px">
  <div class="card-header">
    <h2>Post</h2>
  </div>
  <div class="card-body">
    <div id="notice"><%= notice %></div>
    <h5 class="card-title">Name: <%= @post.name %></h5>   
    <h5 class="card-title">Description: <%= @post.description %></h5>  
    <%= link_to 'Editar', edit_post_path(@post), :class => 'btn btn-primary' %> |
    <%= link_to 'voltar', posts_path, :class => 'btn btn-default' %>
  </div>
</div>

